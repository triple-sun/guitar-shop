// This is your Prisma schema file,
// learn more about it in the docs https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GuitarType {
  Acoustic
  Electric
  Ukulele
}

enum StringCount {
  Four
  Six
  Seven
  Twelve
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String
  passwordHash String
  isAdmin Boolean @default(false)
  reviews Review[]
  currentOrder Int?
  orders Order[]
}

model Guitar {
  id        Int      @default(autoincrement()) @id
  title      String
  desc      String
  type      GuitarType @default(Electric)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  photo     String
  sku       String @unique
  strings   StringCount @default(Six)
  totalRating    Int? @default(0)
  price     Int
  orderItems OrderItem[]

  @@unique([id, price])
}

model Review {
  id Int @default(autoincrement()) @id
  createdAt DateTime
  pros String
  cons String
  comment String
  rating Int @default(1)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
}

model OrderItem {
  id Int @default(autoincrement()) @id
  item Guitar @relation(fields: [itemId, price], references: [id, price], onUpdate: Cascade, onDelete: Cascade)
  itemId Int
  price  Int
  count Int @default(1)
  order Order @relation(fields: [orderId], references: [id])
  orderId Int
}

model Order {
  id Int @default(autoincrement()) @id
  items OrderItem[]
  createdAt DateTime @default(now())
  total Int
  count Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}
